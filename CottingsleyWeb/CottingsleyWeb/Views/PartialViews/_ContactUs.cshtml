@using CottingsleyWeb.Models;
@model UserRegistrationModel



<div class="modal-header">
    <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    <h4 class="modal-title">Register with us </h4>
    <p>and get 1 year free usage<br> and nominal rates afterwards.</p>
</div>
            <form id="registrationForm" method="post">
    <div class="modal-body">

        <div class="form-group">
            <input class="form-control" id="Name" name="Name" placeholder="Your name" required="" type="text" value="">

        </div>

        <div class="form-group">
            <input class="form-control" id="SchoolName" name="SchoolName" placeholder="School name" required="" type="text" value="">

        </div>

        <div class="form-group">
            <input class="form-control" id="Designation" name="Designation" placeholder="Designation" required="" type="text" value="">

        </div>

        <div class="form-group">
            <input class="form-control" id="SchoolLocation" name="SchoolLocation" placeholder="School location(State)" required="" type="text" value="">

        </div>

        <div class="form-group">
            <input class="form-control" id="Telephone" name="Telephone" placeholder="Your phone number" required="" type="text" value="">

        </div>

        <div class="form-group">
            <input class="form-control" id="EmailAddress" name="EmailAddress" placeholder="Your email address" required="" type="text" value="">

        </div>

    </div>
    <div class="modal-footer">
        <input class="btn you-color-big bg-color shadow-color" type="button" value="Go" id="btnRegistrationForm" onclick="registrationSubmitClick()">
    </div>
</form>
        






